{
  "name": "GREase",
  "version": "1.0.0",
  "description": "Learn GRE words on the go",
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["main.js"]
  }
  ],
  "browser_action": {
		"default_title": "GREase",
		"default_popup": "main.html",
    "default_icon": "Logo.png"
	},
  "background":{
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 2
}